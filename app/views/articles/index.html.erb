<div class="article-list-all">

    <% @articles.each do |article| %>
      <section class="article-block">
        <h2 class="com__headline article-block__headline"><%= link_to "#{article.title}", article_path(article) %></h2>
        <div class="com__paragraph article-block__paragraph"><%= article.text %></div>
      </section>
    <% end %>

  </div>
